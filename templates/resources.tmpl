<!-- Header and Nav -->

  <div class="row">
    <div class="large-12 columns">
      <ul class="inline-list right">
        <li>Learning Go with Martini Series</li>
        <li><a href="http://progadventure.blogspot.com/2014/02/learning-go-with-martini-basics.html">The Basics</a></li>
        <li><a href="http://progadventure.blogspot.com/2014/03/learning-go-with-martini-working-with.html">Working with MongoDB</a></li>
        <li><a href="#">Creating a Web UI with Templates</a></li>
      </ul>
      <hr>
    </div>
    
  </div>

  <!-- End Header and Nav -->  
  <div class="row">    
    
    <!-- Main Content Section -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="large-10 push-2 columns">
      
      <h3><span id="selected-resource"></span><small>&nbsp;available attributes</small></h3>
      {{range .}}
         <div id="{{.Resource}}" class="row" style="display:none">  
	   {{ range .Attributes}}
             <div class="row"> 
  	       <h5 class="subheader">{{.Name}} <small>{{.DataType}}&nbsp{{ if .Required}} REQUIRED {{end}}</small></h5>
               <p>{{.Description}}</p>
	     </div>
           {{ end }}
         </div>
      {{end}}
            
    </div>
    
    
    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="large-2 pull-10 columns">
      <h3>Resources</h3>        
      <ul class="side-nav">
       {{ range . }}
        <li><a href="#">{{.Resource}}</a></li>
       {{ end }}
      </ul>
        
    </div>
    
  </div>
    
   <script>
   (function() {
     var resourceElems = document.getElementsByClassName("side-nav")[0]
       , h3Element  = document.getElementById("selected-resource")
       , selectedResourceElem = null; 
  

     var setResource = function(elem) {
       if (selectedResourceElem != null ) {
         selectedResourceElem.className = "";
         document.getElementById( selectedResourceElem.innerText ).setAttribute("style", "display:none")       
       }

       elem.className = "active";
       document.getElementById( elem.innerText ).setAttribute("style", "")       
       document.getElementById("selected-resource").innerText = elem.innerText;
       selectedResourceElem = elem;
     }

     for(var i=0; i < resourceElems.children.length; i++) {
       var child = resourceElems.children[i];
       child.onclick = function(e) { setResource( e.toElement  ) };
     }

     setResource( resourceElems.children[0].firstChild )
   }());
  </script>
          